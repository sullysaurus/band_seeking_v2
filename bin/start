#!/bin/bash

# Exit on error
set -e

echo "ðŸš€ Starting deployment process..."

# Precompile assets
echo "ðŸŽ¨ Precompiling assets..."
RAILS_ENV=production bundle exec rails assets:precompile

# Wait for database to be ready
echo "ðŸ”„ Waiting for PostgreSQL to be ready..."
while ! bundle exec rails runner "ActiveRecord::Base.connection.execute('SELECT 1')" > /dev/null 2>&1; do
    echo "PostgreSQL is unavailable - sleeping"
    sleep 1
done

echo "âœ… PostgreSQL is up - executing migrations"

# Run database migrations
bundle exec rails db:migrate

# Remove any existing server.pid file
echo "ðŸ§¹ Cleaning up old server.pid..."
rm -f tmp/pids/server.pid

# Start the Rails server
echo "ðŸš‚ Starting Rails server..."
bundle exec puma -C config/puma.rb