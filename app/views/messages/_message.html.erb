<div class="flex <%= message.user == current_user ? 'justify-end' : 'justify-start' %>">
  <div class="flex items-end <%= message.user == current_user ? 'flex-row-reverse' : '' %>">
    <% if message.user != current_user %>
      <div class="flex-shrink-0 mr-3">
        <% if message.user.profile&.profile_photo&.attached? %>
          <%= image_tag message.user.profile.profile_photo, class: "h-8 w-8 rounded-full object-cover" %>
        <% else %>
          <%= image_tag "default-profile.png", class: "h-8 w-8 rounded-full object-cover" %>
        <% end %>
      </div>
    <% end %>

    <div class="<%= message.user == current_user ? 'bg-blue-600 text-white' : 'bg-gray-100 text-gray-900' %> rounded-lg px-4 py-2 max-w-xs sm:max-w-md">
      <p class="text-sm"><%= message.body %></p>
    </div>

    <div class="text-xs text-gray-500 <%= message.user == current_user ? 'mr-2' : 'ml-2' %>">
      <%= time_ago_in_words(message.created_at) %> ago
    </div>
  </div>
</div> 