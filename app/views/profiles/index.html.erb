<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Musicians</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @profiles.each do |profile| %>
      <%= link_to profile_path(profile.user.username), class: "block" do %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
          <% if profile.banner_image.attached? %>
            <%= image_tag profile.banner_image, class: "w-full h-32 object-cover rounded-t-lg" %>
          <% else %>
            <%= image_tag "default-banner.jpg", class: "w-full h-32 object-cover rounded-t-lg" %>
          <% end %>
          
          <div class="p-4">
            <div class="flex items-center">
              <div class="relative -mt-12">
                <% if profile.profile_photo.attached? %>
                  <%= image_tag profile.profile_photo, class: "w-16 h-16 rounded-full border-4 border-white object-cover" %>
                <% else %>
                  <%= image_tag "default-profile.png", class: "w-16 h-16 rounded-full border-4 border-white object-cover" %>
                <% end %>
              </div>
              <div class="ml-4">
                <h2 class="text-xl font-bold">
                  <%= "#{profile.try(:first_name)} #{profile.try(:last_name)}".strip.presence || 'Unnamed Musician' %>
                </h2>
                <p class="text-gray-600">
                  <%= profile.zip_code.presence || 'Location not set' %>
                </p>
              </div>
            </div>
            
            <% if profile.bio.present? %>
              <p class="mt-4 text-gray-600 line-clamp-2"><%= profile.bio %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div> 