<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Musicians</h1>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% @profiles.each do |profile| %>
      <%= link_to profile_path(profile.user.username), class: "block" do %>
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow duration-200">
          <% if profile.banner_image.attached? %>
            <%= image_tag profile.banner_image, class: "w-full h-32 object-cover rounded-t-lg" %>
          <% else %>
            <%= image_tag "default-banner.jpg", class: "w-full h-32 object-cover rounded-t-lg" %>
          <% end %>
          
          <div class="p-4">
            <div class="flex items-center">
              <div class="relative -mt-12">
                <% if profile.profile_photo.attached? %>
                  <%= image_tag profile.profile_photo, class: "w-16 h-16 rounded-full border-4 border-white object-cover" %>
                <% else %>
                  <%= image_tag "default-profile.png", class: "w-16 h-16 rounded-full border-4 border-white object-cover" %>
                <% end %>
              </div>
              <div class="ml-4">
                <h2 class="text-xl font-bold text-gray-900">
                  <%= "#{profile.try(:first_name)} #{profile.try(:last_name)}".strip.presence || 'Unnamed Musician' %>
                </h2>
                <p class="text-gray-600">
                  <%= profile.zip_code.presence || 'Location not set' %>
                </p>
                <% if profile.experience_level.present? %>
                  <p class="text-sm text-purple-600 font-medium">
                    <%= profile.experience_level %>
                  </p>
                <% end %>
              </div>
            </div>
            
            <% if profile.bio.present? %>
              <p class="mt-4 text-gray-600 line-clamp-2"><%= profile.bio %></p>
            <% end %>

            <% if profile.instruments_played&.any? %>
              <div class="mt-4 flex flex-wrap gap-2">
                <% profile.instruments_played.reject(&:blank?).each do |instrument| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    <%= instrument %>
                  </span>
                <% end %>
              </div>
            <% end %>

            <% if profile.looking_for&.any? %>
              <div class="mt-2 flex flex-wrap gap-2">
                <% profile.looking_for.reject(&:blank?).each do |looking| %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <%= looking %>
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div> 