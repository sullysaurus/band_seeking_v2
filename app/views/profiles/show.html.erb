      <div class="lg:col-span-8 space-y-6">
        <!-- Spotify Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="font-bold text-lg mb-4">Spotify</h3>
          <div class="bg-gray-100 h-48 sm:h-64 rounded flex items-center justify-center">
