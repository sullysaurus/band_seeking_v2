<% content_for :full_width, true %>

<div class="min-h-screen flex flex-col items-center bg-gray-100 px-4 sm:px-6 py-8 sm:py-12">
  <div class="bg-white shadow-lg rounded-lg w-full max-w-6xl p-4 sm:p-8" data-controller="profile">

    <!-- Render top sections -->
    <%= render 'profiles/banner', profile: @profile %>
    <%= render 'profiles/profile_header', profile: @profile %>

    <!-- Main grid layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 mt-8">

      <!-- Left Sidebar -->
      <div class="lg:col-span-4 space-y-6">
        <%= render 'profiles/sidebar', profile: @profile %>
      </div>

      <!-- Right Content Area -->
      <div class="lg:col-span-8 space-y-6">
        <%= render 'profiles/spotify_section', profile: @profile %>
        <%= render 'profiles/youtube_section', profile: @profile %>
      </div>

    </div>
  </div>
</div>
