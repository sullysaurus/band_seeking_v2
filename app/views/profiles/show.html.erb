<div class="min-h-screen flex flex-col items-center bg-gray-100 px-6 py-12">
  <div class="bg-white shadow-lg rounded-lg w-full max-w-6xl p-8" data-controller="profile">

    <!-- Banner Image Upload -->
    <div class="relative w-full h-64 bg-gray-300 flex items-center justify-center rounded-t-lg">
      <% if @profile.banner_image.attached? %>
        <%= image_tag @profile.banner_image, class: "w-full h-full object-cover rounded-t-lg", data: { profile_preview: "banner" } %>
      <% else %>
        <%= image_tag "default.jpg", class: "w-full h-full object-cover rounded-t-lg", alt: "Default banner" %>
      <% end %>
      <%= form_with model: @profile, url: profile_path(@profile), method: :patch, local: true, html: { multipart: true, class: "absolute inset-0 opacity-0 cursor-pointer" } do |f| %>
        <%= f.file_field :banner_image, accept: "image/*", class: "w-full h-full opacity-0 cursor-pointer", data: { action: "change->profile#previewImage", section: "banner" } %>
      <% end %>
    </div>

    <!-- Modified Profile Header -->
    <div class="relative flex items-start -mt-16">
      <!-- Profile Image -->
      <div class="ml-8">
        <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-white shadow-lg">
          <%= image_tag @profile.profile_photo.present? ? @profile.profile_photo : 'default_profile_photo.png', class: "w-full h-full object-cover" %>
        </div>
      </div>

      <!-- Profile Info -->
      <div class="ml-8 mt-16">
        <h1 class="text-3xl font-bold">John Smith</h1>
        <div class="flex items-center gap-6 mt-2 text-gray-600">
          <!-- Location -->
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>London, UK</span>
          </div>

          <!-- Instagram -->
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <a href="#" class="hover:text-blue-600">@username</a>
          </div>

          <!-- Website -->
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
            <a href="#" class="hover:text-blue-600">website.com</a>
          </div>
        </div>
      </div>
    </div>

    <!-- New Layout Structure -->
    <div class="grid grid-cols-12 gap-6 mt-8">
      <!-- Left Sidebar - Profile Info -->
      <div class="col-span-4 space-y-6">
        <!-- Profile Details Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <!-- Looking For Section -->
          <div class="mb-6">
            <div class="flex items-center mb-3">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <h3 class="font-bold text-lg">Looking For</h3>
            </div>
            <p class="text-gray-600">Drummer for rock band</p>
          </div>

          <!-- Instruments Section -->
          <div class="mb-6">
            <div class="flex items-center mb-3">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
              </svg>
              <h3 class="font-bold text-lg">Instruments</h3>
            </div>
            <div class="flex flex-wrap gap-2">
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Guitar</span>
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">Piano</span>
            </div>
          </div>

          <!-- Other Profile Attributes -->
          <div class="space-y-4">
            <!-- Experience Level -->
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
              </svg>
              <span class="text-gray-700">Intermediate</span>
            </div>

            <!-- Availability -->
            <div class="flex items-center">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-gray-700">Weekends</span>
            </div>
          </div>
        </div>

        <!-- Bio Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center mb-4">
            <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <h3 class="font-bold text-lg">About Me</h3>
          </div>
          <p class="text-gray-700">
            Hey there! I'm a passionate musician with over 5 years of experience playing guitar and piano. I love creating music that blends rock and alternative styles. Currently looking to join or form a band to create original music and perform live.
          </p>
        </div>
      </div>

      <!-- Right Content Area -->
      <div class="col-span-8 space-y-6">
        <!-- Spotify Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="font-bold text-lg mb-4">Spotify</h3>
          <div class="bg-gray-100 h-64 rounded flex items-center justify-center">
            <span class="text-gray-500">Spotify embed placeholder</span>
          </div>
        </div>

        <!-- YouTube Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="font-bold text-lg mb-4">YouTube</h3>
          <div class="bg-gray-100 h-64 rounded flex items-center justify-center">
            <span class="text-gray-500">YouTube embed placeholder</span>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
