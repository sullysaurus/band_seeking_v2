<% content_for :full_width, true %>

<div class="min-h-screen flex flex-col items-center bg-gray-100 px-4 sm:px-6 py-8 sm:py-12">
  <div class="bg-white shadow-lg rounded-lg w-full max-w-6xl p-4 sm:p-8" data-controller="profile">

    <!-- Banner Image Upload -->
    <div class="bg-white">
      <!-- Banner Image -->
      <div class="relative h-48 bg-gray-200">
        <%= form_with(model: @profile, data: { controller: "banner-upload" }) do |f| %>
          <div class="relative h-48 group">
            <% if @profile.banner_image.attached? %>
              <%= image_tag @profile.banner_image, 
                  class: "w-full h-full object-cover",
                  data: { banner_upload_target: "preview" } %>
            <% else %>
              <div class="w-full h-full bg-gray-200" data-banner-upload-target="preview"></div>
            <% end %>
            
            <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            
            <%= f.file_field :banner_image, 
                class: "hidden", 
                accept: "image/*",
                data: { 
                  banner_upload_target: "input",
                  action: "change->banner-upload#previewImage"
                } %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Modified Profile Header -->
    <div class="relative flex flex-col sm:flex-row items-center sm:items-start -mt-16">
      <!-- Profile Image -->
      <div class="mx-auto sm:mx-0 sm:ml-8">
        <%= form_with(model: @profile, data: { controller: "profile-photo" }) do |f| %>
          <div class="w-24 h-24 sm:w-32 sm:h-32 rounded-full overflow-hidden border-4 border-white shadow-lg relative group cursor-pointer">
            <% if @profile.profile_photo.attached? %>
              <%= image_tag @profile.profile_photo, class: "w-full h-full object-cover", data: { profile_photo_target: "preview" } %>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-blue-500 text-white text-3xl sm:text-4xl font-bold" data-profile_photo_target="preview">
                <%= @profile.try(:name).present? ? @profile.name.first.upcase : '?' %>
              </div>
            <% end %>
            <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <%= f.file_field :profile_photo, 
                class: "hidden", 
                accept: "image/*",
                data: { 
                  profile_photo_target: "input",
                  action: "change->profile-photo#previewImage"
                } %>
          </div>
        <% end %>
      </div>

      <!-- Profile Info -->
      <div class="mt-4 sm:ml-8 sm:mt-16 text-center sm:text-left w-full">
      <h1 class="text-2xl sm:text-3xl font-bold"><%= @profile.try(:first_name).presence || 'Your name' %></h1>
        <div class="flex flex-col sm:flex-row items-center sm:items-start gap-3 sm:gap-6 mt-2 text-gray-600">
          <!-- Location -->
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span><%= @profile.try(:location).presence || 'Set your location' %></span>
          </div>

          <!-- Instagram -->
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
              <span><%= @profile.user.try(:username).presence || 'Set a username' %></span>
          </div>

          <!-- Website -->
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
            <a href="<%= @profile.try(:website).presence ? "https://#{@profile.website}" : '#' %>" class="hover:text-blue-600" target="_blank"><%= @profile.try(:website).presence || 'Add website' %></a>
          </div>
        </div>
      </div>
    </div>

    <!-- Modified Grid Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 mt-8">
      <!-- Left Sidebar - Profile Info -->
      <div class="lg:col-span-4 space-y-6">
        <!-- Profile Details Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <!-- Looking For Section -->
          <div class="mb-6" data-controller="tags">
            <div class="flex items-center mb-3">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
              <h3 class="font-bold text-lg">Looking For</h3>
            </div>
            <%= form_with(model: @profile, data: { tags_target: "form" }) do |f| %>
              <div class="flex flex-wrap gap-2">
                <% ['Cover Band', 'Original Band', 'Session Work', 'Jamming'].each do |option| %>
                  <% active = @profile.looking_for.include?(option) %>
                  <button type="button"
                    class="px-4 py-2 rounded-full text-sm font-medium transition-colors duration-150 <%= active ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>"
                    data-tags-target="tag"
                    data-value="<%= option %>"
                    data-action="click->tags#toggle">
                    <%= option %>
                  </button>
                <% end %>
                <%= f.hidden_field :looking_for, multiple: true, value: [], data: { tags_target: "input" } %>
              </div>
            <% end %>
          </div>
          <!-- Instruments Section -->
          <div class="mb-6" data-controller="tags">
            <div class="flex items-center mb-3">
              <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
              </svg>
              <h3 class="font-bold text-lg">Instruments</h3>
            </div>
            <%= form_with(model: @profile, data: { tags_target: "form" }) do |f| %>
              <div class="flex flex-wrap gap-2">
                <% [
                  'Guitar', 'Bass', 'Drums', 'Vocals', 
                  'Piano/Keys', 'Saxophone', 'Trumpet',
                  'Violin', 'Cello', 'Flute', 'Clarinet',
                  'Trombone', 'Percussion', 'Ukulele',
                  'Mandolin', 'Banjo', 'Harmonica',
                  'DJ/Electronic'
                ].each do |instrument| %>
                  <% active = @profile.instruments_played.include?(instrument) %>
                  <button type="button"
                    class="px-4 py-2 rounded-full text-sm font-medium transition-colors duration-150 <%= active ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>"
                    data-tags-target="tag"
                    data-value="<%= instrument %>"
                    data-action="click->tags#toggle">
                    <%= instrument %>
                  </button>
                <% end %>
                <%= f.hidden_field :instruments_played, multiple: true, value: [], data: { tags_target: "input" } %>
              </div>
            <% end %>
          </div>

          <!-- Other Profile Attributes -->
          <div class="space-y-4">
            <!-- Experience Level -->
            <div class="mb-6" data-controller="tags">
              <div class="flex items-center mb-3">
                <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <h3 class="font-bold text-lg">Experience Level</h3>
              </div>
              <%= form_with(model: @profile, data: { tags_target: "form" }) do |f| %>
                <div class="flex flex-wrap gap-2">
                  <% ['Beginner', 'Intermediate', 'Advanced', 'Pro'].each do |level| %>
                    <% active = @profile.experience_level == level %>
                    <button type="button"
                      class="px-4 py-2 rounded-full text-sm font-medium transition-colors duration-150 <%= active ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>"
                      data-tags-target="tag"
                      data-value="<%= level %>"
                      data-action="click->tags#toggleSingle">
                      <%= level %>
                    </button>
                  <% end %>
                  <%= f.hidden_field :experience_level, data: { tags_target: "input" } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Bio Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center mb-4">
            <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <h3 class="font-bold text-lg">About Me</h3>
          </div>
          <p class="text-gray-700">
             <span><%= @profile.user.try(:biol).presence || 'Tell about yourself' %></span>
          </p>
        </div>

        <!-- Social Links Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center mb-4">
            <svg class="w-5 h-5 text-gray-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
            <h3 class="font-bold text-lg">Social Links</h3>
          </div>
          
          <div class="space-y-4">
            <!-- Instagram -->
            <% if @profile.try(:instagram_handle).present? %>
              <a href="https://www.instagram.com/<%= @profile.instagram_url.gsub('@', '') %>" class="flex items-center text-gray-700 hover:text-pink-600 transition-colors" target="_blank">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                @<%= @profile.instagram_handle.gsub('@', '') %>
              </a>
            <% else %>
              <a href="#" class="flex items-center text-gray-700 hover:text-pink-600 transition-colors">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                Add Instagram
              </a>
            <% end %>

            <!-- TikTok -->
            <% if @profile.try(:tiktok_handle).present? %>
              <a href="https://www.tiktok.com/@<%= @profile.tiktok_handle.gsub('@', '') %>" class="flex items-center text-gray-700 hover:text-[#00f2ea] transition-colors" target="_blank">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 015.2-2.39V9.39a7.67 7.67 0 003.45-.67 7.11 7.11 0 002.66-1.78 7.29 7.29 0 001.11-1.32v.02h-.01a8.02 8.02 0 01.01 1.05zM12 0C5.37 0 0 5.37 0 12s5.37 12 12 12 12-5.37 12-12S18.63 0 12 0z"/>
                </svg>
                @<%= @profile.tiktok_handle.gsub('@', '') %>
              </a>
            <% else %>
              <a href="#" class="flex items-center text-gray-700 hover:text-[#00f2ea] transition-colors">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 015.2-2.39V9.39a7.67 7.67 0 003.45-.67 7.11 7.11 0 002.66-1.78 7.29 7.29 0 001.11-1.32v.02h-.01a8.02 8.02 0 01.01 1.05zM12 0C5.37 0 0 5.37 0 12s5.37 12 12 12 12-5.37 12-12S18.63 0 12 0z"/>
                </svg>
                Add TikTok
              </a>
            <% end %>

            <!-- Apple Music -->
            <% if @profile.try(:apple_music_url).present? %>
              <a href="<%= @profile.applemusic_url %>" class="flex items-center text-gray-700 hover:text-pink-500 transition-colors" target="_blank">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.997 6.124c0-.738-.065-1.47-.24-2.19-.317-1.31-1.062-2.31-2.18-3.043C20.642.517 19.63.26 18.464.13 17.368.004 16.25.002 15.134.002c-2.413 0-4.827.003-7.24.008C5.877.017 3.864.032 1.85.061.916.082.44.47.26 1.387.172 1.833.145 2.295.13 2.75c-.027.8-.036 1.602-.036 2.402V18.863c.003.766.008 1.533.04 2.3.025.6.073 1.198.15 1.794.144 1.136.638 2.003 1.61 2.6.843.515 1.776.687 2.75.75.95.053 1.898.084 2.847.118 1.86.067 3.72.066 5.58.105 1.58.033 3.155.114 4.734.13.47.004.94-.024 1.397-.135 1.255-.31 2.052-1.092 2.46-2.293.192-.567.267-1.158.32-1.75.064-.73.084-1.464.086-2.197.002-.635 0-1.27 0-1.902V6.124zm-12.423 5.257V3.828l8.85 3.778-8.85 3.775z"/>
                </svg>
                Apple Music
              </a>
            <% else %>
              <a href="#" class="flex items-center text-gray-700 hover:text-pink-500 transition-colors">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.997 6.124c0-.738-.065-1.47-.24-2.19-.317-1.31-1.062-2.31-2.18-3.043C20.642.517 19.63.26 18.464.13 17.368.004 16.25.002 15.134.002c-2.413 0-4.827.003-7.24.008C5.877.017 3.864.032 1.85.061.916.082.44.47.26 1.387.172 1.833.145 2.295.13 2.75c-.027.8-.036 1.602-.036 2.402V18.863c.003.766.008 1.533.04 2.3.025.6.073 1.198.15 1.794.144 1.136.638 2.003 1.61 2.6.843.515 1.776.687 2.75.75.95.053 1.898.084 2.847.118 1.86.067 3.72.066 5.58.105 1.58.033 3.155.114 4.734.13.47.004.94-.024 1.397-.135 1.255-.31 2.052-1.092 2.46-2.293.192-.567.267-1.158.32-1.75.064-.73.084-1.464.086-2.197.002-.635 0-1.27 0-1.902V6.124zm-12.423 5.257V3.828l8.85 3.778-8.85 3.775z"/>
                </svg>
                Add Apple Music
              </a>
            <% end %>

            <!-- Bandcamp -->
            <% if @profile.try(:bandcamp_url).present? %>
              <a href="<%= @profile.bandcamp_url %>" class="flex items-center text-gray-700 hover:text-blue-600 transition-colors" target="_blank">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M0 18.75l20.708-11.264-7.416 11.264z"/>
                </svg>
                Bandcamp
              </a>
            <% else %>
              <a href="#" class="flex items-center text-gray-700 hover:text-blue-600 transition-colors">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M0 18.75l20.708-11.264-7.416 11.264z"/>
                </svg>
                Add Bandcamp
              </a>
            <% end %>

            <!-- SoundCloud -->
            <% if @profile.try(:soundcloud_url).present? %>
              <a href="<%= @profile.soundcloud_url %>" class="flex items-center text-gray-700 hover:text-orange-500 transition-colors" target="_blank">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.56 8.87V17h8.76c1.85-.13 3.07-1.75 3.07-3.45 0-1.93-1.31-3.32-3.07-3.45h-.43c-.26-3.5-3.2-6.23-6.78-6.23-1.24 0-2.37.33-3.37.96v4.04zm-1.6-.4V17H8.5V9.86c-.3-.07-.6-.11-.9-.11-2.31 0-4.2 1.88-4.2 4.2H2c0-3.08 2.5-5.6 5.6-5.6 1.1 0 2.1.32 2.36.42zM6.5 11.6v5.4h-2V12c-.57.37-1.17.68-1.8.93v-2.09c1-.47 1.8-1.27 1.8-1.27V11.6zm-4 1.87v3.53h-2v-3.53h2z"/>
                </svg>
                SoundCloud
              </a>
            <% else %>
