<% content_for :full_width, true %>

<div class="min-h-screen flex flex-col items-center bg-gray-100 px-4 sm:px-6 py-8 sm:py-12">
  <div class="bg-white shadow-lg rounded-lg w-full max-w-6xl p-4 sm:p-8" data-controller="profile">

    <!-- Render top sections -->
    <%= render 'profiles/banner', profile: @profile %>
    <%= render 'profiles/header', profile: @profile %>

    <!-- Add this near the top of the profile, maybe under the name -->
    <% if current_user && @profile.user != current_user %>
      <%= button_to "Message", conversations_path, 
          params: { sender_id: current_user.id, recipient_id: @profile.user.id },
          method: :post,
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>

    <!-- Main grid layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6 mt-8">
      <!-- Left Sidebar -->
      <div class="lg:col-span-4 space-y-6">
        <div class="space-y-6">
          <!-- Use @profile consistently -->
          <%= render 'profiles/preferences', profile: @profile %>
          <%= render 'profiles/about', profile: @profile %>
        </div>
      </div>

      <!-- Right Content Area -->
      <div class="lg:col-span-8 space-y-6">
        <%= render 'profiles/spotify', profile: @profile %>
        <%= render 'profiles/youtube', profile: @profile %>
      </div>
    </div>
  </div>
</div>
